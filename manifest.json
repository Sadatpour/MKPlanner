{
  "name": "Moji Planner",
  "version": "1.0.0",
  "description": "افزونه برنامه‌ریز روزانه برای فریلنسرها با تقویم فارسی/انگلیسی، پومودورو، چک‌لیست و ...",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Moji Planner"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "identity",
    "storage",
    "notifications"
  ],
  "chrome_url_overrides": {
    "newtab": "popup/index.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["js/shahnameh_verses.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "oauth2": {
    "client_id": "737594070946-qej7mfb6bh9klq0sjgl0p8e5omt4o573.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar"
    ]
  },
  "host_permissions": [
    "https://www.googleapis.com/"
  ]
} 