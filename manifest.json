{
  "name": "Moji Planner",
  "version": "1.0.0",
  "description": "افزونه برنامه‌ریز روزانه برای فریلنسرها با تقویم فارسی/انگلیسی، پومودورو، چک‌لیست و ...",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Moji Planner"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "chrome_url_overrides": {
    "newtab": "popup/index.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["js/shahnameh_verses.json"],
      "matches": ["chrome-extension://*/*"]
    }
  ]
} 